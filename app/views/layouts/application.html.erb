<!DOCTYPE html>
<html>
<head>
  <title>TrelloClone</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<h1>TRELLO CLONE BABY </h1>

<%= render partial: "shared/errors" %>

<% if current_user %>
  <%= button_to "Log Out", session_url, method: :delete %>
<% else %>
  <a href="<%= new_user_url %>">Register</a>
  <a href="<%= new_session_url %>">Log In</a>
<% end %>

<%= yield %>

</body>
</html>
